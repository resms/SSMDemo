<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
	<!--<properties resource="generator.properties"/>-->
    <!--数据库驱动-->
    <!-- <classPathEntry location="mysql-connector-java-5.0.8-bin.jar"/> -->
    <!--<classPathEntry location="${jdbc.driverLocation}"/>-->
    <!--<context id="default"  targetRuntime="MyBatis3">-->
    <context id="default"  targetRuntime="MyBatis3">
        <property name="fileEncoding" value="UTF-8" />
	    <plugin type="org.mybatis.generator.plugins.SerializablePlugin" />
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <plugin type="org.mybatis.generator.plugins.EqualsHashCodePlugin" />

        <commentGenerator type="com.resms.plugin.mybatis.generator.DbRemarkCommentGenerator">
        	<!-- 是否生成注释时间戳true=不生成，false=生成 -->
            <property name="suppressDate" value="false"/>
            <property name="dateFormat" value="yyyy-MM-dd HH:mm:ss"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="false"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

		<jdbcConnection
                        driverClass="${jdbc.driver}"
                        connectionURL="${jdbc.url}"
                        userId="${jdbc.username}" 
                        password="${jdbc.password}" />

        <javaTypeResolver>
        	<!-- 默认false，把JDBC DECIMAL 和 NUMERIC 类型解析为 Integer true， 把 JDBC DECIMAL 和 NUMERIC 类型解析为java.math.BigDecimal -->
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--生成Model类存放位置-->
        <!-- javaModelGenerator是模型的生成信息，这里将指定这些Java model类的生成路径； -->
        <javaModelGenerator targetPackage="com.resms.ssm.gen.mybatis.bean"
                            targetProject="src/main/java">
            <!-- 是否对model添加 构造函数 -->
            <property name="constructorBased" value="true"/>
            <!-- 是否允许子包，即targetPackage.schemaName.tableName -->
            <property name="enableSubPackages" value="false"/>
            <!-- 建立的Model对象是否 不可改变  即生成的Model对象不会有 setter方法，只有构造方法 -->
            <property name="immutable" value="false"/>
            <!-- 是否对类CHAR类型的列的数据进行trim操作 -->
            <property name="trimStrings" value="true"/>
            <property name="isMergeable" value="true"/>
            <property name="rootClass" value="AbstractDomain" />
        </javaModelGenerator>

        <!--生成映射文件存放位置-->
        <!-- sqlMapGenerator是mybatis 的sqlMapper XML文件的生成信息，包括生成路径等； 先生成xml，再生成java -->
        <sqlMapGenerator targetPackage="com.resms.ssm.gen.mybatis.mapper"
                         targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <property name="isMergeable" value="true"/>
        </sqlMapGenerator>

        <!--生成映射文件存放位置-->
        <!-- javaClientGenerator是应用接口的生成信息； -->
        <!-- 客户端代码，生成易于使用的针对Model对象和XML配置文件 的代码
                type="ANNOTATEDMAPPER",生成Java Model 和基于注解的Mapper对象
                type="MIXEDMAPPER",生成基于注解的Java Model 和相应的Mapper对象
                type="XMLMAPPER",生成SQLMap XML文件和独立的Mapper接口
        -->
        <javaClientGenerator 
        	type="XMLMAPPER" 
        	targetPackage="com.resms.ssm.gen.mybatis.mapper"
        	targetProject="src/main/java">
            <property name="enableSubPackages" value="false"/>
            <!-- 为生成的接口添加父接口 -->
            <!--<property name="rootInterface" value="BaseDao"/>-->
            <property name="isMergeable" value="true"/>
        </javaClientGenerator>

        <!-- table配置数据库中的表的信息，每张表配置一个，默认采用驼峰规则对应,如果需要个性化,请填写domainObjectName属性 -->
        <table tableName="t_user"
        	domainObjectName="User"
        	enableCountByExample="true"
        	enableUpdateByExample="true"
        	enableDeleteByExample="true"
        	enableSelectByExample="true"
        	selectByExampleQueryId="true">
            <!--默认情况下，表字段如果用下划线分隔，生成的字段就是驼峰法-->
            <!--添加属性useActualColumnNames为true,那么生成的对象字段就跟表一样-->
            <!--<property name="useActualColumnNames" value="true"/>-->
        </table>
	</context>
</generatorConfiguration>