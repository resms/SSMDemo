        <profile>
            <id>sit</id>
            <properties>
                <package.environment>sit</package.environment>
                <!--
                    数据库类型名称，可选值包括：h2,mysql,db2,oracle,postgresql
                    用于数据库脚本名称的扩展
                    例如：
                        db\schema_h2.sql
                        db\sit\data_h2.sql
                -->
                <db.type>h2</db.type>
                <log.home>logs/${package.environment}</log.home>
                <log.maxhis>99</log.maxhis>
                <jdbc.driver>org.h2.Driver</jdbc.driver>
                <jdbc.url>jdbc:h2:~/h2_sit;MODE=MYSQL;AUTO_SERVER=TRUE;AUTO_RECONNECT=TRUE;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;INIT=CREATE SCHEMA IF NOT EXISTS TEST</jdbc.url>
                <!--<jdbc.url>jdbc:h2:~/h2_sit;MODE=MYSQL;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE;AUTO_SERVER=TRUE;AUTO_RECONNECT=TRUE;MVCC=TRUE;INIT=CREATE SCHEMA IF NOT EXISTS TEST</jdbc.url>-->
                <!--<jdbc.url>jdbc:h2:~/testdb;MODE=MYSQL;AUTOSERVER=TRUE;DB_CLOSE_DELAY=-1</jdbc.url>-->
                <jdbc.username>sa</jdbc.username>
                <jdbc.password></jdbc.password>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <repositories>
                <repository>
                    <id>aliyun-nexus</id>
                    <url>http://maven.aliyun.com/nexus/content/groups/public</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>

            <pluginRepositories>
                <pluginRepository>
                    <id>aliyun-plugin</id>
                    <url>http://maven.aliyun.com/nexus/content/groups/public</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>

            <build>
                <finalName>${project.artifactId}-${package.environment}</finalName>
                <resources>
                    <resource>
                        <directory>src/main/resources</directory>
                        <includes>
                            <include>**/*.xml</include>
                            <include>**/*.properties</include>
                        </includes>
                        <excludes>
                            <exclude>uat/*</exclude>
                            <exclude>ver/*</exclude>
                            <exclude>prod/*</exclude>
                            <exclude>sit/*</exclude>
                        </excludes>
                        <filtering>true</filtering>
                    </resource>
                    <resource>
                        <directory>src/main/env/${package.environment}</directory>
                        <includes>
                            <include>**/*.xml</include>
                            <include>**/*.properties</include>
                        </includes>
                        <filtering>true</filtering>
                    </resource>
                </resources>
            </build>
